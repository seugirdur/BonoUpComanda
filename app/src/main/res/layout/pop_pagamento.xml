<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@drawable/background_card_pedido"
    android:orientation="vertical"
    >


    <TextView
        android:id="@+id/realmente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Escolha a forma de pagamento"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="20dp"
        android:fontFamily="@font/hammersmithoneregular"
        android:layout_margin="10dp"
        android:padding="10dp"
        />

    <Button
        android:id="@+id/pagamentoPix"
        android:layout_marginBottom="30dp"
        android:onClick="pgtoPix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pix"
        style="@style/btn_style_inverted"
        />

    <Button
        android:id="@+id/pagamentoDinheiro"
        android:layout_width="wrap_content"
        android:onClick="calcularTroco"
        android:layout_height="wrap_content"
        android:text="Dinheiro"
        android:layout_marginBottom="30dp"
        style="@style/btn_style_inverted"
        />

        <Button
            android:id="@+id/pagamentoDebito"
            android:onClick="pgtoDebito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Debito"
            style="@style/btn_style_inverted"
            android:layout_marginBottom="30dp"
            />

        <Button
            android:id="@+id/pagamentoCredito"
            android:onClick="pgtoCredito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CrÃ©dito"
            style="@style/btn_style_inverted"
            android:layout_marginBottom="30dp"
            />

    <Button
        android:id="@+id/btcancelarPagamento"
        android:onClick="cancelarPagamento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancelar Pagamento"
        style="@style/btn_style_white"
        android:layout_marginBottom="30dp"
        />


</LinearLayout>